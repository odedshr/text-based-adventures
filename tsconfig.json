// tsconfig.base.json
{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./docs/js",
    "rootDir": "./src/main",
    "lib": [
      "DOM",
      "ES6"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}